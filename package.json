{
  "name": "taskplanner",
  "version": "1.0.0",
  "description": "MERN stack student task planner",
  "main": "server2/index.js",
  "scripts": {
    "start": "node server2/index.js",
    "server": "nodemon server2/index.js",
    "client": "npm start --prefix an",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "npm install --prefix an && npm run build --prefix an",
    "render-build": "npm install && npm install --prefix an && npm run build --prefix an"
  },
  "engines": {
    "node": "22.16.0"
  },
  "dependencies": {
    "express": "^4.21.1",
    "mongoose": "^8.7.1",
    "dotenv": "^16.4.5",
    "cors": "^2.8.5",
    "body-parser": "^1.20.3",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.15",
    "node-cron": "^3.0.3",
    "express-session": "^1.18.1",
    "connect-mongo": "^5.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "concurrently": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AnilaAnilaN/taskPlanner.git"
  },
  "author": "AnilaAnilaN",
  "license": "ISC"
}
